App.KL.Game.Effect.common.shield.circle(
  range: I32
  area: I32
  id: String
  duration: I32
  amount: I32
  ap_cost: I32
): App.KL.Game.Effect<Unit>

  App.KL.Game.Effect {
    App.KL.Game.Effect.ap.use(ap_cost)
    App.KL.Game.Effect.limit_range(range)
    get target = App.KL.Game.Effect.coord.get_target
    get center = App.KL.Game.Effect.coord.get_center
    let circle = App.KL.Game.Effect.area.circle(target, area)
    App.KL.Game.Effect.indicators.list(App.KL.Game.Indicator.blue, [center])
    App.KL.Game.Effect.indicators.list(App.KL.Game.Indicator.green, circle)
    App.KL.Game.Effect.area!(App.KL.Game.Effect.status.shield.add(id, duration, amount), circle)
    return unit
  }
